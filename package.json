{
  "name": "autogitcommitnoverify",
  "displayName": "Auto Git Commit No Verify",
  "description": "Automatically commit and push changes to Git on file save without verification",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autogitcommitnoverify.enable",
    "onCommand:autogitcommitnoverify.disable",
    "onSaveTextDocument"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamsanh/vs-code-auto-git-commit-no-verify"
  },
  "contributes": {
    "commands": [
      {
        "command": "autogitcommitnoverify.enable",
        "title": "Enable Auto Git Commit with No Verify"
      },
      {
        "command": "autogitcommitnoverify.disable",
        "title": "Disable Auto Git Commit with No Verify"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "autogitcommitnoverify.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable/Disable Auto Git Commit with No Verify"
        },
        "autogitcommitnoverify.push": {
          "type": "boolean",
          "default": true,
          "description": "Automatically push after commit"
        },
        "autogitcommitnoverify.commitMessage": {
          "type": "string",
          "default": "Auto commit",
          "description": "Default commit message"
        },
        "autogitcommitnoverify.branch": {
          "type": "string",
          "default": "main",
          "description": "Branch to push changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "eslint": "^7.22.0",
    "typescript": "^4.2.3",
    "vscode-test": "^1.5.2"
  }
}
